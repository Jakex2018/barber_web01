---
import { staff } from "../js/staff";
import CardStaff from "./CardStaff.astro";
---

<section
    id="staff"
    class="relative overflow-hidden w-full xl:min-h-[140vh] min-h-[270vh] bg-white"
>
    <div class="flex flex-col items-center justify-center mt-20">
        <span class="text-[50px] text-black font-bold">OUR STAFF</span>
        <div
            class="flex xl:flex-row flex-col gap-y-10 items-center justify-evenly mt-20 gap-x-10 xl:max-w-[150vh] lg:max-w-[100vh] max-w-[40vh]"
        >
            {
                staff.map((item: any) => (
                    <CardStaff
                        name={item.name}
                        role={item.role}
                        image={item.image}
                    />
                ))
            }
        </div>
    </div>
</section>
