---
import { Image } from "astro:assets";
import FormContent from "./FormContent.astro";
---

<section
    id="contact"
    class="relative overflow-hidden w-full md:min-h-[140vh] min-h-[160vh]"
>
    <div
        class="w-full h-full min-h-[80vh] bg-[url('/image/backgroundcontact.webp')] bg-cover bg-no-repeat"
    >
        <div class="flex flex-col items-start p-12 justify-center">
            <h4 class="text-[60px] text-white max-w-[50vh] leading-[60px]">
                RESERVA TU CUPO AHORA
            </h4>
            <p
                class="text-gray-300 font-light max-w-[60vh] text-[20px] mt-5 text-pretty"
            >
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi
                velit magna, cursus sit
            </p>
            <div class="flex items-center gap-x-5 mt-10">
                <Image
                    class="py-4 px-4 bg-white rounded-full size-20"
                    src="/icons/ic--round-phone.svg"
                    alt=""
                    height={20}
                    width={20}
                />

                <div class="flex flex-col items-start text-white">
                    <span class="text-[24px]">Llama al</span>
                    <p>322 32101202</p>
                </div>
            </div>
        </div>
    </div>
    <div
        class="w-full md:min-h-[80vh] min-h-[100vh] bg-[url('/image/map.jpg')] bg-cover bg-no-repeat"
    >
    </div>
    <div
        data-aos="fade-down"
        class="absolute xl:top-[15%] lg:top-[25%] md:top-[30%] top-[40%] xl:right-3 lg:right-3 sm:right-3 right-0 xl:min-w-2xl lg:min-w-3xl md:min-w-[52vh] min-w-[50vh] xl:min-h-[90vh] lg:min-h-[50vh] min-h-[50vh] bg-white rounded-lg drop-shadow-md"
    >
        <FormContent />
    </div>
</section>
